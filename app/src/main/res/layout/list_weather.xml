<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp">
        <ImageView
            android:id="@+id/iv_list_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/clear"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_toEndOf="@id/iv_list_icon"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tv_list_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tomorrow"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/tv_list_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moderate Rain"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_list_mintemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="13°"
            android:textColor="#999999"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/tv_list_maxtemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_toStartOf="@id/tv_list_mintemp"
            android:layout_centerVertical="true"
            android:text="17°"
            android:textColor="#000000"
            android:textSize="30sp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>