<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp"
    android:background="#ffffff">
    <ImageView
        android:id="@+id/iv_list_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="17dp"
        android:src="@drawable/cloudy"/>
    <LinearLayout
        android:layout_toEndOf="@id/iv_list_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/tv_list_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tomorrow"/>
        <TextView
            android:id="@+id/tv_list_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moderate Rain"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_list_mintemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:text="18"
        android:textSize="30dp" />
    <TextView
        android:id="@+id/tv_list_maxtemp"
        android:layout_toLeftOf="@id/tv_list_mintemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="18"
        android:textSize="30dp"
        android:textColor="#000000"/>
</RelativeLayout>